@using OnlineShopping.Models
 @model List<Category>
 <div class="container">
	 <div class="row pb-3">
		<div class="col-6">
			<h2>Category List</h2>
		 </div>
		 <div class="col-6 text-end">
			 <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square-fill"></i> Create Category
			 </a>
			
		 </div>
	 </div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u=> u.DisplayOrder))
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="btn-group role-group w-75 ">
						<a class="btn btn-success mx-2" asp-controller="" asp-action="">
								<i class="bi bi-pencil-fill"></i>Edit
						</a>
						<a class="btn btn-danger mx-2" asp-controller="" asp-action="">
								<i class="bi bi-trash3-fill"></i>Delete
						</a>
					</div>
				</td>
			</tr>
		}
		
	</tbody>
</table>
</div>