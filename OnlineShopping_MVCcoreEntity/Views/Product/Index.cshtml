@using OnlineShopping.Models
@model List<Product>

<div class="row">
	<div class="col-6 mb-2" >
		<h2>Product Details</h2>
	</div>
	<div class="col-6 text-end">
		<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-square-fill"></i> Create New Product
		</a>
	</div>
	<div class="col-12 ">
		<form asp-action="Search" method="get">
			<div class="row">
				<div class="col-3 mb-2">
					<input type="text" name="query" placeholder="Search Product" class="form-control" />
				</div>
				<div class="col-3 mb-2">
					<button  class="btn btn-primary">Search</button>
				</div>				
			</div>
		</form>	
	</div>

</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Product Name
			</th>
			<th>
				Description
			</th>
			<th>
				CategoryId
			</th>
			<th>
				Price
			</th>
		</tr>

	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.ProductName
				</td>
				<td>
					@item.ProductDescription
				</td>
				<td>
					@item.ProductCategoryId
				</td>
				<td>
					@item.ProductPrice
				</td>
				<td>
					<div class="btn-group w-75">
						<a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">
							<i class="bi bi-pencil-fill"></i>Edit
						</a>
						<a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class=" btn btn-danger mx-2">
							<i class="bi bi-trash3-fill"></i>Delete
						</a>
					</div>
					
				</td>

			</tr>
		}

	</tbody>
</table>

