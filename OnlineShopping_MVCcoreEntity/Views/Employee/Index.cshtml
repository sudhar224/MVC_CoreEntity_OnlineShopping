@using OnlineShopping.Models
@model List<Employee>

<div class="row">
	<div class="col-6">
		<h2>Employee Details</h2>
		<partial name="_Notification" />
	</div>
	<div class="col-6 text-end">
		<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-square-fill"></i> Create New Employee
		</a>
	</div>
	<div class="row col-12 form-group">
		<form asp-action="SearchEmployee" asp-controller="Employee" method="get">
			<div class="col-3">
				<input type="text" name="query" class="form-control" />
			</div>
			<div class="col-3">
				<button type="submit" class="btn btn-primary form-control">Search</button>
			</div>
		</form>
	</div>
	
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>EmployeeName</th>			
		
			<th>EmployeeId</th>
	
			<th>EmployeeDOB</th>
		
			<th>EmployeeMobile</th>
		
			<th>EmployeeAddress</th>
		
			<th>EmployeeJoinDate</th>
		</tr>
	</thead>
	<tbody>
        @foreach(var obj in Model)
        {
			<tr>
				<td>@obj.EmployeeName</td>
				<td>@obj.EmployeeId</td>
				<td>@obj.EmployeeMobile</td>
				<td>@obj.EmployeeDOB</td>
				<td>@obj.EmployeeAddress</td>
				<td>@obj.EmployeeJoinDate</td>
				<td>
					<div class="btn-group ">
						<div class="mx-2">
							<a asp-action="Edit" asp-controller="Employee" asp-route-id="@obj.Id" class="btn btn-success">
								<i class="bi bi-pencil-fill"></i>Edit
							</a>
						</div>
						<div class="mx-2">
							<a asp-action="Delete" asp-controller="Employee" asp-route-id="@obj.Id" class="btn btn-danger">
								<i class="bi bi-trash3-fill"></i>Delete
							</a>
						</div>					
					</div>
				
				</td>
			</tr>
		}
	</tbody>
</table>
